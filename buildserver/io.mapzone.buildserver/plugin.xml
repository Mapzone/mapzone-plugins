<?xml version="1.0" encoding="UTF-8"?>
<?eclipse version="3.4"?>
<plugin>
   <extension
         point="org.eclipse.rap.ui.entrypoint">
      <entrypoint
            brandingId="io.mapzone.buildserver.branding"
            class="org.polymap.rhei.batik.BatikApplication"
            id="io.mapzone.buildserver.entrypoint"
            path="/builds">
      </entrypoint>
   </extension>
   <extension
         point="org.polymap.rhei.batik.design">
      <design
            class="org.polymap.rhei.batik.toolkit.md.MdAppDesign"
            id="io.mapzone.buildserver.design"
            servletNameMatcher="/builds">
      </design>
   </extension>
   <extension
         point="org.eclipse.rap.ui.branding">
      <branding
            id="io.mapzone.buildserver.branding"
            themeId="org.polymap.rhei.batik.materialDesign"
            title="Buildserver">
         <additionalHeaders>
            <link
                  href="batikres/css/md/flowtext.css"
                  rel="stylesheet">
            </link>
            <link
                  href="batikres/css/roboto.css"
                  rel="stylesheet">
            </link>
         </additionalHeaders>
      </branding>
   </extension>
   <extension
         point="org.polymap.rhei.batik.panels">
      <panel
            class="io.mapzone.buildserver.ui.StartPanel"
            id="io.mapzone.buildserver.StartPanel">
      </panel>
      <panel
            class="io.mapzone.buildserver.ui.BuildConfigPanel"
            id="io.mapzone.buildserver.BuildConfigPanel">
      </panel>
      <panel
            class="io.mapzone.buildserver.ui.BuildConfigsPanel"
            id="io.mapzone.buildserver.BuildConfigsPanel">
      </panel>
      <panel
            class="io.mapzone.buildserver.ui.BuildResultPanel"
            id="io.mapzone.buildserver.BuildResultPanel">
      </panel>
   </extension>
   <extension
         point="org.polymap.rhei.batik.panelFilters">
      <panelFilter
            class="io.mapzone.buildserver.ui.BsPanelFilter"
            servletNameMatcher="/builds">
      </panelFilter>
   </extension>
   <extension
         point="org.eclipse.equinox.http.registry.servlets">
      <servlet
            alias="/builds/download"
            class="io.mapzone.buildserver.DownloadServlet"
            load-on-startup="true">
      </servlet>
   </extension>

</plugin>
